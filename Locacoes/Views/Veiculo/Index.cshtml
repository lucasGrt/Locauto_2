@model IEnumerable<Locacoes.Models.Veiculo>

@{
    ViewData["Title"] = "Lista de Veiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Cadastrar veiculo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.anoFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.combustivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kilometragem)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.modelo.Nome)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.anoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.combustivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kilometragem)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
